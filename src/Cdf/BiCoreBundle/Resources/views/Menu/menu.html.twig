                                                        <li><span class="divider">&nbsp;</span>
                                                        {% else  %}
                                                        </li>                              
                                                        <li><a role="menuitem" class="list-item bicore-menu-item-level-2" href="{{ sottomenu.percorso }}" target="{{ sottomenu.target }}"><span>{{ sottomenu.nome }} </span></a></li>
                                                        {% endif  %}
                                                    {% endfor %}
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>                        
