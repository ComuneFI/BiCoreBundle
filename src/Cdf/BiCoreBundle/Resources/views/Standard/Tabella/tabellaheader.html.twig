<thead>
    <tr>
        <th scope="col" id="bititletable{{parametri.nomecontroller|getparametrotabella}}" class="text-center table-secondary">
            {{parametri.titolotabella|getparametrotabella}}
        </th>
    </tr>
    <tr class="filters d-flex">
        <th scope="col" class="biw-3 {% if (parametri.multiselezione|getparametrotabella == false) %}sr-only{% else %}text-center{% endif %}">
            <input type="checkbox" class="{% if (parametri.multiselezione|getparametrotabella == false) %}sr-only{% else %}bitabellacheckboxselectall{% endif %}">
        </th>
        {% for colonnatabella in parametri.parametritabella %}
            {% if (colonnatabella.escluso == false) %}
                <th scope="col" class="{{colonnatabella.larghezza|larghezzacolonna}} {{sort_class(parametri.colonneordinamento|getparametrotabella,colonnatabella)}}">
                    <input type="text" class="form-control {{colonnatabella.association?"":'colonnatabellafiltro'}}" data-nomecampo="{{colonnatabella.nomecampo}}" data-tipocampo="{{colonnatabella.tipocampo}}" {{colonnatabella.decodifiche is defined?'data-decodifiche='~colonnatabella.decodifiche|json_encode():""}} data-nomecontroller="{{parametri.nomecontroller|getparametrotabella}}" placeholder="{{colonnatabella.association or colonnatabella.campoextra?"":'&emsp;'}}{{colonnatabella.etichetta}}" title="{{colonnatabella.etichetta}}" readonly>
                </th>
            {% endif %}
        {% endfor%}
        <th scope="col" class="biw-5"></th>
    </tr>
</thead>
